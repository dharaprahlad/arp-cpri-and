<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cpri.fragment.OtherFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="?actionBarSize">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="CPRI @ DEMARC : "
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:paddingTop="@dimen/padding_top_bottom"
                android:paddingBottom="@dimen/padding_top_bottom"/>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/cpri_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="select"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textAlignment="center"
                android:focusableInTouchMode="true"
                android:textColorHint="#05ab9a"
                android:layout_gravity="right"
                app:met_floatingLabel="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Port Assignment @ DEMARC : "
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:paddingTop="@dimen/padding_top_bottom"
                android:paddingBottom="@dimen/padding_top_bottom"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/other_port_assignment_edt"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:inputType="number"
                    android:maxLength="2"
                    android:background="@drawable/rounded_edittext" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text=" , "
                    android:gravity="center"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/other_port_assignment_edt1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:inputType="number"
                    android:maxLength="2"
                    android:background="@drawable/rounded_edittext" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Patch Cabels Installed : "
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:paddingTop="@dimen/padding_top_bottom"
                android:paddingBottom="@dimen/padding_top_bottom"/>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/patch_cabel_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="select"
                android:textAlignment="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:focusableInTouchMode="true"
                android:textColorHint="#05ab9a"
                android:layout_gravity="right"
                app:met_floatingLabel="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SFP @ XMU : "
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:paddingTop="@dimen/padding_top_bottom"
                android:paddingBottom="@dimen/padding_top_bottom"/>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/sfp_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="select"
                android:textAlignment="center"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textColorHint="#05ab9a"
                android:layout_gravity="right"
                app:met_floatingLabel="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Link to XMU : "
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:paddingTop="@dimen/padding_top_bottom"
                android:paddingBottom="@dimen/padding_top_bottom"/>


            <Switch
                android:id="@+id/linkSwitch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="false"
                android:paddingTop="@dimen/padding_top_bottom"
                android:paddingBottom="@dimen/padding_top_bottom"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textOff="Off"
                android:textOn="On" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="VSWR : "
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:paddingTop="@dimen/padding_top_bottom"
                android:paddingBottom="@dimen/padding_top_bottom"/>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/vswr_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="select"
                android:textAlignment="center"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textColorHint="#05ab9a"
                android:layout_gravity="right"
                app:met_floatingLabel="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="AILG : "
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:paddingTop="@dimen/padding_top_bottom"
                android:paddingBottom="@dimen/padding_top_bottom"/>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/AILG_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="select"
                android:textAlignment="center"
                android:focusableInTouchMode="true"
                android:textColorHint="#05ab9a"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="right"
                app:met_floatingLabel="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ALARMS : "
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:paddingTop="@dimen/padding_top_bottom"
                android:paddingBottom="@dimen/padding_top_bottom"/>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/ALARMS_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="select"
                android:textAlignment="center"
                android:focusableInTouchMode="true"
                android:textColorHint="#05ab9a"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="right"
                app:met_floatingLabel="none" />
        </LinearLayout>
